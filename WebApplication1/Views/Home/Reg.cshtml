@using WebApplication1.Models
@model UserIdentityModels

@*@using (Html.BeginForm("Reg", "Home", FormMethod.Post))*@
<div id="Reg1" style="width:100%;height:5rem;">
    <div id="reg1" style="font-size:30px">注册</div>
</div>
<form method="post">
    <div id="Rege1" style="width:100%;height:20rem;">
        <div id="Acc1" style="width:100%;height:20%;border-bottom:solid 0.1rem grey;">
            <span id="acc1" style="float:left">用户</span>
            @*<input type="text" id="accc1" style="float:left" />*@
            @*@Html.TextBox("Name", "", new { @class = "input-text" })*@ 
            @Html.TextBoxFor(m=>m.Name,new { @class = "input-text" })
            @Html.ValidationMessageFor(m => m.Name,"", new { @class = "text-danger" })
        </div>

        <div id="PassWord1" style="width:100%;height:15%;border-bottom:solid 0.1rem grey;margin-top:1.7rem">
            <span id="pw1" style="float:left">密码</span>
            @*<input type="text" id="pww1" style="float:left" />*@
            @*@Html.TextBox("Password", "", new { @class = "input-text" })*@
            @Html.TextBoxFor(m=>m.PassWord ,new { @class = "input-text" })
            @Html.ValidationMessageFor(m => m.PassWord, "", new { @class = "text-danger" })
        </div>
        <div id="ConfirmPassWord1" style="width:100%;height:15%;border-bottom:solid 0.1rem grey;margin-top:1.7rem">
            <span id="pw1" style="float:left">确认密码</span>
            @*<input type="text" id="pww1" style="float:left" />*@
            @*@Html.TextBox("ConfirmPassword", "", new { @class = "input-text" })*@
            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "input-text" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "",new { @color="red"})
        </div>
        <div id="Butto1" style="width:100%;height:24%;border-bottom:solid 0.1rem grey;">
                <input type="submit" value="注册" />
        </div>
    </div>
</form>
