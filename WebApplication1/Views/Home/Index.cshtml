                //    }
                //}

                $.ajax({
                    //type:"Get",
                    url: "/WebService1.asmx/HelloWorld", async: false, success: function (result) {
                        alert(result.children[0].innerHTML);
                    }
                });
            </script>
        </div>
    </div>
</body>
