                    @*<input type="text" id="guanjianzi" placeholder="请输入关键字" />*@
                    @Html.TextBox("guanjianzi", "", new { @placeholder = "请输入关键字" })

                    <input type="submit" name="action" onclick='this.form.action="@Url.Action("Index")"' value="查询" id="chaxun" />
                </form>
            </div>

            @*<input type="submit" value="SubmitToAbout1" name="action"/>
                <input type="submit" value="SubmitToAbout2" name="action" />*@

            <div id="changeMyPage">
                <form method="post">
                    <input id="BtnPre" type="submit" value="上一页" name="action" onclick='this.form.action="@Url.Action("Index")"' />
                    <input id="BtnNex" type="submit" value="下一页" name="action" onclick='this.form.action="@Url.Action("Index")"' />
                </form>
            </div>
        </div>
        <div id="typem" class="divline">
            <div class="checkboxeddiv">
                <input type="checkbox" class="checkboxeds" onclick="checkall()" />
            </div>
            <div class="chaozuo">Name</div>
            <div class="biaoti">Advantage</div>
            <div class="faburen">Disadvantage</div>
            <div class="riqi">Country</div>
            <div class="leixing">Recommend Models</div>
        </div>
        <div id="con">

            <form method="post">
                @{if (@ViewBag.b != null)
                    {
                        foreach (eeeModel a in @ViewBag.b)
                        {
                            //string Id = @a[0].ToString();
                            <div id="typem" class="divline">
                                <div class="checkboxeddiv" onclick="">
                                    @Html.CheckBox("checkboxeds", new { @id = @a.Id, @class = "checkboxeds", @value = @a.Id })
                                    @*<input type="checkbox" class="checkboxeds" onclick=""  value="@a[0]"/>*@
                                </div>
                                <div class="xuhao" id="@a.Id"></div>
                                <div class="chaozuo" onclick="zz()">@a.Name</div>
                                <div class="biaoti">@a.Advantage</div>
                                <div class="faburen">@a.Disadvantage</div>
                                <div class="riqi">@a.Country</div>
                                <div class="leixing">@a.Recommend_Models</div>
                            </div>
                        }
                    }
                }
                <input type="submit" id="deda" value="删除" name="action" onclick='this.form.action="@Url.Action("Index")"' />
            </form>

            <script src="@Url.Content("~/Scripts/eE.js")" type="text/javascript"></script>
            <script src="~/Scripts/jquery-3.1.1.min.js"></script>
            <script>
                function zz() {
                    $("#bg").attr("style", "z-index: 2;");
                    $("#ty").attr("style", "z-index: 3;");
                }
                function closeview() {
                    $("#bg").attr("style", "z-index: -2;");
                    $("#ty").attr("style", "z-index: -3;");
                }
                function checkall() {
                    var check = document.getElementsByClassName("checkboxeds");
                    for (var i = 0; i < check.length; i++) {
                        if (check[0].checked) {
                            if (check[i].checked == false) {
                                check[i].checked = true;
                            }
                        } else if (check[0].checked == false) {
                            check[i].checked = false;
                        }

                        //if (check[0].checked == false) {
                        //    check[i].checked = false;
                        //}
                    }
                }
                //if() {
                //    var checkboxeds = document.getElementsByClassName("checkboxeds");
